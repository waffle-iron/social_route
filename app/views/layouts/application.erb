<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css'>
    <link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet'>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js'></script>
  </head>
  <body>
    <div class='page-flexbox-wrapper'>
      <header class='no-print'>
        <nav class='light-blue lighten-1' role='navigation'>
          <div class='nav-wrapper container'>
            <a id='logo-container' href='/dashboard' class='brand-logo'>
              The Social Route
            </a>
            <ul class='right hide-on-med-and-down'>
              <% if signed_in? %>
                <li>
                  <%= link_to(dashboard_path) do %>
                    <i class='material-icons'>view_module</i>
                  <% end %>
                  <%= link_to(profile_path) do %>
                    <i class='material-icons'>person</i>
                  <% end %>
                </li>
                <li>
                  <%= link_to 'Sign out', sign_out_path, method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to 'Sign in', sign_in_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </header>
      <main>
        <div ng-app='thesocialroute' class='container' ng-cloak>
          <%= custom_bootstrap_flash %>
          <%= yield %>
        </div>
      </main>
      <footer class='page-footer grey darken-2 no-print'>
        <div class='container'>
          <div class='row'>
            <div class='col s12'>
              <h5 class='white-text'>Questions</h5>
              <p class='grey-text text-lighten-4'>
                If you have any questions please reach out to Michael Pierce<br>
                <a class='orange-text' href='tel:720-387-9691'>Phone</a> /
                <a class='orange-text' href='mailto:michael@thesocialroute.com'>E-Mail</a>
              </p>
            </div>
          </div>
        </div>
        <div class='footer-copyright'>
          <div class='container'>
          Â© 2016 The Social Route
          </div>
        </div>
      </footer>
    </div>
  </body>

  <!-- Scripts -->
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '929099250543497',
        xfbml      : true,
        version    : 'v2.6',
        status     : true,
        cookie     : true
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
  </script>
</html>
