<% provide(:title, "Dashboard") %>
<center>
  <h1>Dashboard</h1>
</center>

<div class="row">
  <% @adaccounts.each do |account| %>
    <div class="col s6">
      <div class="card white">
        <div class="card-content grey-text">
          <span class="card-title"><%= account['name'] %></span>
          <p>
            Status: <%= account_status_codes(account['account_status']) %><br>
            <!-- Current Status: <span class="green-text text-darken-2">Ok</span><br> -->
            Active Campaigns: X
          </p>
        </div>
        <div class="card-action">
          <%= link_to "Overview", overview_path(:account_id => account['id'], :account_name => account['name']) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
