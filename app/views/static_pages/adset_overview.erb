<% provide(:title, "Account Adsets: #{@account.name}") %>

<center>
  <h2>
    <%= @account.name %>
    <br>
    Adset Overview
  </h2>
</center>

<div ng-controller='OverviewAdsetCtrl'>
  <div class="card white darken-1">
    <div class="card-content grey-text text-darken-1">
      <table class="bordered responsive-table highlight">
        <thead>
          <tr>
            <th style='width: 40%;'>Adset Name</th>
            <th class="right-align">Daily Budget</th>
            <th class="right-align">Spent</th>
            <th class="right-align">Status</th>
            <th class="right-align">Frequency</th>
            <th class="right-align">Impressions</th>
            <th class="right-align">CPM</th>
            <th class="right-align">CPR</th>
            <th class="right-align"></th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="data in overviewAdsets | orderBy: 'name'">
            <td>{{data.adset.name}}</td>
            <td class="right-align">{{data.adset.daily_budget | currency}}</td>
            <td class="right-align">{{data.adset.spend | currency}}</td>
            <td class="right-align">{{data.adset.status}}</td>
            <td class="right-align">{{data.adset.frequency | number: 3}}</td>
            <td class="right-align">{{data.adset.impressions | number}}</td>
            <td class="right-align">{{data.adset.cpm | currency}}</td>
            <td class="right-align">{{data.adset.cpr | currency}}</td>
            <td>
              <i class="material-icons" style='color: #FF9800' ng-if="campaign.best == 'yes'">grade</i>
            </td>
          </tr>
        </tbody>
      </table>
      <br><br>
    </div>
  </div>
</div>
